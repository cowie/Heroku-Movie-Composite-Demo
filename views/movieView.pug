extends layout

block mainPane
  .position-relative.overflow-hidden.p-3.p-md-5.m-md-3.text-center.bg-light
      h1.display-4.font-weight-normal=movie.title__c
      p.lead.font-weight-normal=movie.overview__c

  .container
    ul.nav.nav-pills.nav-fill
      li.nav-item
        a.nav-link.active(href="#") Details
      li.nav-item
        a.nav-link(href="#") Reviews
  br
  .container.marketing
    .row
      each castMember in movie.shortCast
        .col-lg-4.text-center
          svg.bd-placeholder-img.rounded-circle(width="140", height="140", xmlns="http://www.w3.org/2000/svg", preserveAspectRatio="xMidYMid slice", focusable="false", role="img", aria-label="Placeholder: 140x140")
            title Placeholder
            rect(fill="#777", width="100%", height="100%")
            text(fill="#777", dy=".3em", x="50%", y="50%") 140x140
          h2= castMember.name
          p= castMember.character
  div
    h2 Genre
    p= movie.Genres

    h2 Keywords
    p= movie.Keywords

    h2 Production Companies
    p= movie.companies

    h2 Production Countries
    p=movie.countries

  div
    h4 Redis Data
    h2 Previously Viewed
    p previouslyViewedList

    h2 Recommendations
    p recommendationList

  div
    h4 Mongo Data
    h2 Reviews
    p reviewsList

    h2 Add a review

  div
    h4 neo4j Data
    h2 Relationships